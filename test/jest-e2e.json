{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "./e2e.setup.ts",
  "globalTeardown": "./e2e.teardown.ts",
  "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./reports/junit",
          "outputName": "e2e-results.xml"
        }
      ]
    ]
}
